{
  "env": {
    "es2021": true,
    "shared-node-browser": true
  },
  "extends": [
    "eslint:recommended",
    "plugin:@typescript-eslint/recommended",
    "prettier"
  ],
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "ecmaVersion": 12,
    "sourceType": "module"
  },
  "plugins": ["@typescript-eslint", "simple-import-sort"],
  "rules": {},
  "overrides": [
    { "files": "__tests__/**", "env": { "jest": true }, "plugins": ["jest"] }
  ]
}
